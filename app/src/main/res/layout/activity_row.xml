<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="15dp">

    <EditText
            android:id="@+id/edt_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Family"
            android:inputType="text" />

    <EditText
            android:id="@+id/edt_species_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Num of Species"
            android:inputType="text" />

    <EditText
            android:id="@+id/edt_species_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Percent of Species"
            android:inputType="text" />

    <EditText
            android:id="@+id/edt_genus_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of Genus"
            android:inputType="text" />
    <EditText
            android:id="@+id/edt_genus_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Percent of Genus"
            android:inputType="text" />

    <Button
            android:id="@+id/btAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Add/Edit" />

</LinearLayout>